<div class="px-1">
  <%= form_with(model: @room, remote: true, class: "d-flex" ) do |f| %>
    <div class="field is-grouped">
      <p class="control is-expanded">
        <%= f.text_field :name, class: "input", autocomplete: 'off', placeholder: "nombre"%>
      </p>
      <p class="control">
        <%= f.submit data: { disable_with: false }, class: "button is-link is-responsive" %>
      </p>            
    </div>
  <% end %>
</div>